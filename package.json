{
  "scripts": {
    "start": "npm-run-all -p jekyll stylus postcss browser-sync",
    "jekyll": "jekyll serve",
    "browser-sync": "browser-sync start -p localhost:4000 --files='_site/**/*' --no-notify --no-open",
    "stylus": "stylus -w static/src/css/style.styl",
    "postcss": "postcss -w -u postcss-ant -o static/dist/css/style.css static/src/css/style.css"
  },
  "devDependencies": {
    "browser-sync": "^2.17.1",
    "npm-run-all": "^3.1.0",
    "postcss-ant": "^0.1.4",
    "postcss-cli": "^2.6.0",
    "stylus": "^0.54.5"
  },
  "private": true
}
