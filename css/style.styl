@import 'reset.css'

bp = 1000px
c1 = #c6c658

cf()
  *zoom: 1
  &:before, &:after
    content: ''
    display: table
  &:after
    clear: both

html, body
  height: 100%

html
  overflow: hidden
  font-family: 'proxima-nova-soft', sans-serif
  line-height: 1.5

.side
  width: 30vw

.logo
  width: 220px
  display: block
  margin: auto
  padding: 60px 15px
  position: relative
  z-index: 2
  +below(bp)
    position: absolute
    left: 40px
    right: 0
    padding: 20px

.cory
  position: fixed
  left: 2vw
  width: 26vw
  bottom: -100vh
  margin: auto
  animation: slideUp 2s ease forwards
  +below(bp)
    animation: none
    position: absolute
    top: 24px
    left: -210px
    right: 0
    bottom: auto
    width: 50px
    height: 50px
    border-radius: 999em
    background: rgba(black, 80%)

@keyframes slideUp
  100%
    bottom: -5vh

.content
  position: fixed
  top: 0
  right: 0
  bottom: 0
  width: 70vw
  overflow-y: scroll
  background: rgba(black, 80%)
  color: c1
  +below(bp)
    width: 100%
    top: 100px
    border-top: 3px solid darken(white, 10%)

article
  padding: 60px
  +below(bp)
    padding: 30px

h1, h2, h3, h4
  color: white
  margin: 0 0 30px
  font-weight: 100
  letter-spacing: -.025em
  line-height: 1.1em

p
  margin-bottom: 1rem
  &:last-of-type
    margin-bottom: 0

a
  color: lighten(c1, 50%)
  transition: all 400ms ease
  &:hover
    color: lighten(c1, 70%)
    text-decoration: none

b
  color: darken(c1, 35%)
  font-weight: normal

.light-bg
  background: darken(white, 5%)
  color: lighten(black, 10%)
  h1, h2, h3, h4
    color: black
    font-weight: 500

.experience
  figure
    cf()
    background: darken(white, 2%)
    padding: 30px
    margin: 0 -30px 30px
    border-radius: 10px
    border: 1px solid darken(white, 7%)
    &:last-of-type
      margin-bottom: 0
    +below(bp)
      border-radius: 0
      margin-bottom: 0
      border: 0
      border-bottom: 1px solid darken(white, 7%)
      &:first-of-type
        border-top: 1px solid darken(white, 7%)
    img
      float: left
      width: 10%
      background: white
      border-radius: 999em
      padding: 10px
      margin-right: 30px
      border: 1px solid darken(white, 5%)
      +below(bp)
        width: 80px
        float: none
        display: block
        margin-bottom: .5rem
    figcaption
      float: left
      width: calc(90% - 30px)
      +below(bp)
        float: none
        width: 100%
      header
        p
          color: darken(white, 15%)
          font-size: .85rem
          margin-bottom: .5rem
    h3
      color: c1
      font-size: 1.25rem
      margin-bottom: 5px
    h4
      color: darken(white, 25%)
      font-weight: 100
      font-size: .85rem
      margin-bottom: 0

.social
  cf()
  a
    float: left
    width: 10%
    margin-right: 30px
    background: white
    border-radius: 999em
    padding: 20px
    +below(bp)
      width: 50px
      padding: 15px
    &:hover
      transform: translate3d(0, -2px, 0)
      background: darken(white, 7%)
  img
    display: block

.contact
  padding: 60px
  +below(bp)
    padding: 30px
  label
    display: block
    font-weight: 500
    margin-bottom: .5rem
    span
      display: block
  input, textarea
    font-weight: 100
    padding: 10px
    border: 1px solid darken(white, 10%)
  input
    width: 300px
    +below(bp / 2)
      width: 100%
  textarea
    width: 500px
    max-width: 100%
    height: 140px
    resize: vertical
    +below(bp / 2)
      width: 100%
  button
    background: c1
    color: white
    padding: 5px 30px
    border: 0
    border-radius: 4px
    border-bottom: 3px solid darken(c1, 20%)
    &:hover
      background: darken(c1, 5%)
      transform: translate3d(0, 1px, 0)
      border-bottom-width: 2px
      margin-top: 1px
    &:active
      background: darken(c1, 15%)
      transform: translate3d(0, 2px, 0)
      border-bottom-width: 1px
      margin-top: 2px
    img
      height: 20px
      margin-left: -5px
      margin-right: 5px
      position: relative
      top: 3px
    span
      position: relative
      top: -2px

.result
  p
    display: inline-block
    margin-top: 1rem
    padding: 15px
    background: lighten(c1, 60%)
    color: darken(c1, 30%)

.resume
  position: absolute
  top: 15px
  left: 15px
  img
    height: 30px
    display: block
