@import '../../src/css/reeeset/reeeset.min.css'
@import 'https://fonts.googleapis.com/css?family=Istok+Web:400,400i,700|Lora:400,700';
@import '../../src/css/syntax-highlighting.css'

$bp = 800px
$sm = 30px
$lg = 60px
$golden = 1.618

$c1 = #39526C
$c2 = mix(mix(#B4C0CC, #445263), #445263)

$stack1 = 'Istok Web', 'Helvetica Neue', Helvetica, Arial, Tahoma, sans-serif
$stack2 = Lora, Georgia, serif
$stack3 = 'Droid Sans Mono for Powerline', 'Droid Sans Mono', Menlo, 'Source Code Pro for Powerline', 'Source Code Pro', 'Roboto Mono for Powerline', 'Roboto Mono', Hack, 'Fira Mono for Powerline', 'Fira Mono', 'Courier New', Courier, monospace, monospace, sans-serif

strong
  color: darken($c2, 20%)

code
  font-family: $stack3

trans($speed = 200ms)
  transition: all $speed ease-in-out

main, .post
  a
    color: lighten($c1, 20%)
    text-decoration: none
    position: relative
    &::after
      trans()
      content: ''
      position: absolute
      width: 100%
      left: 0
      bottom: -1px
      height: .075em
      background: linear-gradient(to right, white, lighten(#A2F8C5, 10%), lighten(#8FCDF2, 40%), lighten(#96C9D3, 60%), lighten(#A2F8C5, 20%), white)
      max-width: 100%
      z-index: -1
    &:hover
      &::after
        opacity: .5
        max-width: 50%
        transform: translate3d(50%, 0, 0)


h1, h2, h3, h4, h5, h6
  color: $c1
  font-family: $stack2
  letter-spacing: -.025em
  margin-bottom: $sm
  font-weight: 600
  line-height: 1.2

  @media (min-width: $bp)
    line-height: 1.3333333

p:last-of-type
  margin-bottom: 1em

:root
  margin: $sm
  color: $c2
  font-family: $stack1
  line-height: 1.666666
  overflow-x: hidden
  overflow-y: scroll
  font-size: 14px
  -webkit-font-smoothing: antialiased

  @media (min-width: $bp)
    margin: $lg
    font-size: 18px

body
  max-width: 1440px
  margin: auto

nav
  margin-bottom: $sm

  @media (min-width: $bp)
    display: flex
    margin-bottom: $lg

  > a
    display: block
    width: 250px
    text-align: center
    margin-right: auto

    @media (min-width: $bp)
      text-align: initial

  > div
    margin-top: $sm

    @media (min-width: $bp)
      display: flex
      align-items: flex-start
      margin-left: auto
      margin-top: 0

    > a
      trans()
      text-decoration: none
      text-align: center
      line-height: 50px
      background: lighten($c2, 80%)
      display: block
      margin-bottom: 2px
      color: $c1
      font-weight: bold
      letter-spacing: .025em
      &:hover, &:active
        background: lighten($c2, 70%)

      @media (min-width: $bp)
        background: none
        line-height: 1.333333
        margin-left: $sm
        font-size: .75rem
        color: $c2
        text-transform: uppercase

        &:hover
          color: $c1

        &:hover, &:active
          background: none

abbr[title]
  text-decoration: none
  position: relative
  cursor: help
  &::after
    position: absolute
    content: ''
    border-bottom: 1px dotted $c2
    width: 100%
    bottom: 2px
    left: 0

.logo
  text-decoration: none
  margin: auto

  @media (min-width: $bp)
    min-width: 330px
    margin: -15px 0 0

  > span
    display: block
    color: $c1

    &:nth-child(1)
      font-family: $stack2
      font-size: 2.25rem
      font-weight: 600
      margin-left: -.025em

    &:nth-child(2)
      font-family: $stack3
      color: $c2
      font-size: .5rem

// Home
.page-home
  main
    @media (min-width: $bp)
      generate-grid: columns(ratio($golden, 1) ratio($golden, 3)) gutter(60px)
      align-items: flex-start

    > img
      border-radius: 2px
      margin-bottom: $sm

      @media (max-width: $bp)
        display: block
        margin: auto auto $sm

    > *
      margin-bottom: $sm

  h1
    font-size: 2rem
    @media (min-width: $bp)
      font-size: 2.25rem

  h3
    text-align: center
    @media (min-width: $bp)
      text-align: initial
      margin-bottom: 15px

  ul
    list-style: none
    display: flex
    flex-wrap: wrap
    justify-content: center
    align-items: center
    max-width: 100%

    @media (min-width: $bp)
      justify-content: flex-start

    li
      margin: ($sm / 2)

      @media (min-width: $bp)
        margin: 0 $lg $sm 0

    a
      &::after
        display: none
      &[desc]
        &::before
          trans()
          opacity: 0
          content: attr(desc)
          position: absolute
          left: 50%
          min-width: 75%
          transform: translate3d(-50%, -100%, 0)
          bottom: -100%
          border-radius: 2px
          background: lighten($c2, 75%)
          border: 1px solid lighten($c2, 45%)
          color: darken($c2, 30%)
          font-weight: bold
          text-align: center
          font-size: 10px
          line-height: 14px
          padding: 2px
        &:hover
          &::before
            opacity: 1
            transform: translate3d(-50%, 0, 0)

  .lost
    max-width: 120px

  .jeet
    max-width: 100px

  .typographic
    max-width: 120px

  .boy
    max-width: 90px

  .intel
    max-width: 80px

  .shft
    max-width: 110px
    background: #222

  .laracasts
    max-width: 110px
    opacity: .75

  .bethesda
    max-width: 110px

  .scholastic
    max-width: 120px

  .world-vision
    width: 100px

  .mojotech
    width: 60px

  .grist
    max-width: 60px

  ul
    margin-bottom: 0

  .uses-work
    margin-bottom: 15px

  .worked-with
    padding-bottom: $sm

    h3
      margin-bottom: $sm

  .built, .uses-work, .worked-with, .written-for, .what-i-know
    border-top: 1px solid lighten($c2, 70%)
    padding-top: $lg

  .written-for
    h3
      margin-bottom: $sm

  .tutsplus
    background: darken($c1, 20%)
    border-radius: 3px
    padding: 5px 8px
    max-width: 110px

  .css-tricks
    max-width: 110px

  .packt
    height: 30px

  .net-mag
    max-width: 70px

  .intro
    margin-bottom: $lg

  .what-i-know
    padding-bottom: $sm

    h3
      margin-bottom: $sm

    h4
      font-family: $stack1
      font-size: .75rem
      text-transform: uppercase
      letter-spacing: .25em
      margin-bottom: 5px

    p
      font-size: .75rem

  progress
    appearance: none
    margin-bottom: 5px
    width: 100%

    &[value]
      &::-webkit-progress-value
        background: $c1
      &::-webkit-progress-bar
        background: darken(white, 5%)

  .skills
    @media (min-width: $bp)
      generate-grid: columns(1/2 1/2) gutter(60px)

  .skill
    p
      &:last-of-type
        margin-bottom: $sm

.page-writings
  p
    &:first-of-type
      margin-top: $lg
      margin-bottom: $lg

  h2
    margin-bottom: $lg

    a
      margin-top: $lg
      text-decoration: none
      font-size: 1.5rem
      color: $c1

    .date
      display: block
      font-family: $stack1
      font-size: .85rem
      font-weight: normal
      letter-spacing: .015em

  .pagination
    float: left
    margin-top: $lg

    .next,
    .previous
      trans()
      border: 2px solid rgba($c2, 30%)
      padding: 10px 30px
      text-decoration: none
      border-radius: 2px
      font-size: .85rem
      font-weight: bold
      letter-spacing: .025em
      color: $c1

      &:hover
        border-color: rgba($c2, 45%)
        background: rgba($c2, 3%)

    .previous
      margin-right: $sm

.post
  padding-bottom: calc(50vh - 1.666666em - 60px)
  color: $c2
  h1
    margin-top: $sm
    float: left
  > *:not(h1)
    margin-bottom: $sm

  h2, h3, h4, h5, h6
    margin-top: $lg

  footer
    margin-top: $lg
    p
      display: flex
      align-items: center
      font-size: 3rem
      > span
        display: block
        font-size: 1.75rem
        margin-left: $sm
        margin-top: -10px
        font-weight: bold
        color: $c1
        > span
          display: block
          font-size: .85rem

.post-date
  color: $c2
  width: 100%
  clear: both
  position: relative
  top: -($sm / 1.5)
  text-transform: uppercase
  font-weight: bold
  font-size: .75rem
  letter-spacing: .25em
  margin-bottom: $sm

  @media (min-width: $bp)
    margin-bottom: $lg

ol, ul
  list-style-position: inside

pre,
code
  background: darken(white, 2%)
  border: 1px solid darken(white, 5%)
  padding: 2px
  overflow-x: auto

pre
  padding: ($sm / 2)
  @media (min-width: $bp)
    padding: ($lg / 2)
  overflow-x: auto
  font-size: .85rem
  code
    background: none
    border: none
    padding: none
    overflow-x: hidden

blockquote
  padding: $sm
  background: darken(white, 2%)
  border-left: 5px solid darken(white, 5%)

  > *
    &:last-child
      margin-bottom: 0

ul
  ul
    margin-left: 1em

.post
  li
    margin-bottom: 5px

.highlight
  .err
    background: none

// http://stackoverflow.com/a/21369918/175825
ol
  counter-reset: item

  > li
    padding: 0 0 0 1.5em
    text-indent: -1.5em
    list-style-type: none
    counter-increment: item

    &::before
      display: inline-block
      width: 1.5em
      padding-right: 0.5em
      font-weight: bold
      text-align: right
      content: counter(item) "."
      color: darken($c2, 20%)

code
  font-size: .85rem

pre
  code
    font-size: .85rem
