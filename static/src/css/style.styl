@import '../../src/css/reeeset/reeeset.min.css'
@import 'https://fonts.googleapis.com/css?family=Istok+Web:400,400i,700|Lora:400,700';

$bp = 800px
$sm = 30px
$lg = 60px
$golden = 1.618

$c1 = #39526C
$c2 = #B4C0CC

$stack1 = Istok Web, Helvetica Neue, Helvetica, Arial, Tahoma, sans-serif
$stack2 = Lora, Georgia, serif

trans($speed = 200ms)
  transition: all $speed ease-in-out

main
  a
    color: lighten($c1, 20%)
    text-decoration: none
    position: relative
    &::after
      trans()
      content: ''
      position: absolute
      width: 100%
      left: 0
      bottom: -1px
      height: 2px
      background: linear-gradient(to right, white, lighten(#A2F8C5, 10%), lighten(#8FCDF2, 40%), lighten(#96C9D3, 20%), lighten(#A2F8C5, 20%), white)
      max-width: 100%
    &:hover
      &::after
        opacity: .5
        max-width: 50%
        transform: translate3d(50%, 0, 0)


h1, h2, h3, h4, h5, h6
  color: $c1
  font-family: $stack2
  letter-spacing: -.025em
  margin-bottom: $sm
  font-weight: 600
  line-height: 1.2

  @media (min-width: $bp)
    line-height: 1.3333333

  ~ h1, ~ h2, ~ h3, ~ h4, ~ h5, ~ h6
    margin-top: $sm

    @media (min-width: $bp)
      margin-top: $lg

:root
  margin: $sm
  color: $c2
  font-family: $stack1
  line-height: 1.666666
  overflow-y: scroll
  font-size: 14px
  -webkit-font-smoothing: antialiased

  @media (min-width: $bp)
    margin: $lg
    font-size: 18px

body
  max-width: 1440px
  margin: auto

nav
  margin-bottom: $sm

  @media (min-width: $bp)
    display: flex
    margin-bottom: $lg

  > a
    display: block
    width: 250px
    text-align: center
    margin-right: auto

    @media (min-width: $bp)
      text-align: initial

  > div
    margin-top: $sm

    @media (min-width: $bp)
      display: flex
      align-items: flex-start
      margin-left: auto
      margin-top: 0

    > a
      trans()
      text-decoration: none
      text-align: center
      line-height: 50px
      background: lighten($c2, 80%)
      display: block
      margin-bottom: 2px
      color: $c1

      @media (min-width: $bp)
        background: none
        line-height: 1.333333
        margin-left: $sm
        font-size: .75rem
        color: $c2
        text-transform: uppercase
        letter-spacing: .025em
        font-weight: bold

        &:hover
          color: $c1

abbr[title]
  text-decoration: none
  position: relative
  cursor: help
  &::after
    position: absolute
    content: ''
    border-bottom: 1px dotted $c2
    width: 100%
    bottom: 2px
    left: 0

.logo
  text-decoration: none
  margin: auto

  @media (min-width: $bp)
    min-width: 300px
    margin: -15px 0 0

  > span
    display: block
    color: $c1

    &:nth-child(1)
      font-family: $stack2
      font-size: 2.25rem
      font-weight: 600

    &:nth-child(2)
      font-family: $stack1
      text-transform: uppercase
      font-weight: bold
      letter-spacing: .25em
      color: $c2
      font-size: .85rem

// Home
.page-home
  main
    @media (min-width: $bp)
      generate-grid: sizes(ratio($golden, 1) ratio($golden, 3)) gutter(60px)
      align-items: flex-start

    > picture
      display: block

      > img
        border-radius: 1px

    > *
      margin-bottom: $sm

  h1
    font-size: 2rem
    @media (min-width: $bp)
      font-size: 2.25rem

  h3
    text-align: center
    @media (min-width: $bp)
      text-align: initial
      margin-bottom: 15px

  ul
    list-style: none
    display: flex
    flex-wrap: wrap
    justify-content: center
    align-items: center
    max-width: 100%

    @media (min-width: $bp)
      justify-content: flex-start

    li
      margin: ($sm / 2)

      @media (min-width: $bp)
        margin: 0 $lg $sm 0

    a
      &::after
        display: none
      &[desc]
        &::before
          trans()
          opacity: 0
          content: attr(desc)
          position: absolute
          left: 50%
          min-width: 75%
          transform: translate3d(-50%, -100%, 0)
          bottom: -100%
          border-radius: 2px
          background: lighten($c2, 75%)
          border: 1px solid lighten($c2, 45%)
          color: darken($c2, 30%)
          font-weight: bold
          text-align: center
          font-size: 10px
          line-height: 14px
          padding: 2px
        &:hover
          &::before
            opacity: 1
            transform: translate3d(-50%, 0, 0)

  .lost
    max-width: 120px

  .jeet
    max-width: 100px

  .typographic
    max-width: 120px

  .boy
    max-width: 90px

  .intel
    max-width: 80px

  .shft
    max-width: 110px
    background: #222

  .laracasts
    max-width: 110px
    opacity: .75

  .scholastic
    max-width: 130px

  .world-vision
    width: 120px

  .mojotech
    width: 70px

  .grist
    max-width: 80px
